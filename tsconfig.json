{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@packages/*": ["./src/packages/*"],
      "@sub-static/*": ["./src/packages/sub-static/_components/*"],
      "@sub-echarts/*": ["./src/packages/sub-echarts/_components/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "@dcloudio/types",
      "miniprogram-api-typings",
      "@uni-helper/uni-types",
      "@uni-helper/vite-plugin-uni-pages",
      "@uni-ku/bundle-optimizer/client",
      "wot-design-uni/global",
      "uni-echarts/global"
    ],
    "noImplicitAny": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    // 调整 Volar（Vue 语言服务工具）解析行为，用于为 uni-app 组件提供 TypeScript 类型
    "nativeTags": [
      "block",
      "component",
      "template",
      "slot"
    ],
    "plugins": [
      "@uni-helper/uni-types/volar-plugin"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
